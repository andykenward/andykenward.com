// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/javascript-node-lts
{

  // Use 'settings' to set *default* container specific settings.json values on container create.
  // You can edit these settings after create using File > Preferences > Settings > Remote.
  "settings": {
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    // ESLINT
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.codeAction.disableRuleComment": {
      "enable": true,
      "location": "sameLine"
    },
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      { "language": "typescript", "autoFix": true },
      { "language": "typescriptreact", "autoFix": true }
    ],
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true,
      "**/.cache": true,
      "**/.next": true
    },
    "peacock.remoteColor": "#0078D7",
    "terminal.integrated.shell.linux": "/bin/bash",
    "typescript.tsdk": "node_modules/typescript/lib",
    "search.exclude": {
      "**/node_modules": true,
      "**/.cache": true,
      "**/.vscode": true,
      "**/public": true,
      "**/.next": true,
      "**/out": true
    },
    "stylelint.enable": true,
    // LANGUAGES
    "[javascript]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
  },

  // Uncomment the next line if you want to publish any ports.
  "appPort": [3000],

  // Uncomment the next line to run commands after the container is created.
  "postCreateCommand": "mkdir -p /root/.ssh && cp -r /root/.ssh-localhost/* /root/.ssh && chmod 700 /root/.ssh && chmod 600 /root/.ssh/ && npm install",

  // Uncomment the next line to use a non-root user. On Linux, this will prevent
  // new files getting created as root, but you may need to update the USER_UID
  // and USER_GID in .devcontainer/Dockerfile to match your user if not 1000.
  "runArgs": [
    "-v",
    "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh-localhost:ro"
  ],

  // Add the IDs of extensions you want installed when the container is created in the array below.
  "extensions": [
    "dbaeumer.vscode-eslint",
    "johnpapa.vscode-peacock",
    "apollographql.vscode-apollo",
    "esbenp.prettier-vscode",
    "shinnn.stylelint",
    "christian-kohler.path-intellisense",
    "christian-kohler.npm-intellisense",
    "visualstudioexptteam.vscodeintellicode"
  ]
}
