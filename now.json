{
  "version": 2,
  "name": "com",
  "alias": "andykenward.com",
  "scope": "andykenward",
  "regions": ["lhr1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "out" }
    }
  ],
  "build": {
    "env": {
      "SCHEMA_PATH": "@andykenward_com_schema_path",
      "ENDPOINT": "@andykenward_com_endpoint"
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=604800" },
      "dest": "/static/$1"
    },
    { "handle": "filesystem" },
    {
      "src": "^/(.*).html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" },
      "dest": "$1.html"
    }
  ]
}
