{
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.vscode": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.cache": true,
    "**/node_modules": true,
    "**/public": false
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.cache": true,
    "**/.next": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.cache": true,
    "**/.vscode": true,
    "**/public": false,
    "**/storybook-statc": true,
    "**/.next": true,
    "**/out": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  // ESLINT
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "sameLine"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "stylelint.enable": false,
  // LANGUAGES
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  // COLORS
  "peacock.color": "#0078d7",
  "workbench.colorCustomizations": {
    "activityBar.background": "#0b93ff",
    "activityBar.activeBackground": "#0b93ff",
    "activityBar.activeBorder": "#ffbfe3",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#ffbfe3",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#0078d7",
    "titleBar.inactiveBackground": "#0078d799",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#0078d7",
    "statusBarItem.hoverBackground": "#0b93ff",
    "statusBar.foreground": "#e7e7e7",
    "statusBar.border": "#0078d7",
    "titleBar.border": "#0078d7"
  },
  "peacock.remoteColor": "#215732",
  // "jest.autoEnable": false
}